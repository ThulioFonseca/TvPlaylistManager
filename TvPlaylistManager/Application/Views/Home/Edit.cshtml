@using TvPlaylistManager.Domain.Models
@using TvPlaylistManager.Domain.Models.Epg
@model EpgSource

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>EpgSource</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Alias" class="control-label"></label>
                <input asp-for="Alias" class="form-control" />
                <span asp-validation-for="Alias" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Url" class="control-label"></label>
                <input asp-for="Url" class="form-control" />
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
            <div class="form-group form-switch m-2">
                <label asp-for="Status" class="control-label">

                    <input class="form-check-input me-2" asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
                </label>
            </div>
            <div class="form-group">
                <label class="form-label">Create Date</label>
                <input type="text" class="form-control" value="@Model.CreatedAt" disabled />
                <input type="hidden" asp-for="CreatedAt" />
            </div>
            <div class="row row-cols-2 p-3">
                <div class="col col-md-2 p-1">
                    <a asp-action="Index" class="btn btn-danger w-100" title="Back">
                        <i class="bi bi-arrow-left"></i>
                    </a>
                </div>
                <div class="col col-md-2 p-1">
                    <button type="submit" class="btn btn-primary w-100" title="Save" id="saveBtn">
                        <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                        <i class="bi bi-floppy"></i>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.querySelector("form").addEventListener("submit", function (event) {
            let btn = document.getElementById("saveBtn");
            let spinner = btn.querySelector(".spinner-border");

            spinner.classList.remove("d-none");
            btn.querySelector("i").classList.add("d-none");

            btn.disabled = true;
        });
    </script>
}
