@using TvPlaylistManager.Domain.Models
@using TvPlaylistManager.Domain.Models.Epg
@model EpgSource

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>EpgSource</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Alias)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Alias)
        </dd>
        <dt class="col-sm-2">
            Url:
        </dt>
        <dd class="col-sm-10">
            <a href="@Html.DisplayFor(model => model.Url)">@Html.DisplayFor(model => model.Url)</a>
        </dd>
        <dt class="col-sm-2">
            Status:
        </dt>
        <dd class="col-sm-10">
            @if (Model.Status)
            {
                <i class="bi bi-check-circle-fill text-success"> Active</i>
            }
            else
            {
                <i class="bi bi-x-circle-fill text-danger"> Inactive</i>
            }
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
    </dl>

    <form asp-action="Delete">
        <div class="row row-cols-2 p-3">
            <div class="col col-md-2 p-1">
                <a asp-action="Index" class="btn btn-primary w-100" title="Back">
                    <i class="bi bi-arrow-left"></i>
                </a>
            </div>
            <div class="col col-md-2 p-1">
                <input type="hidden" asp-for="Id" />
                <button type="submit" value="Delete" class="btn btn-danger w-100" title="Save" id="deleteBtn">
                    <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                    <i class="bi bi-trash"></i>
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        document.querySelector("form").addEventListener("submit", function (event) {
            let btn = document.getElementById("deleteBtn");
            let spinner = btn.querySelector(".spinner-border");

            spinner.classList.remove("d-none");
            btn.querySelector("i").classList.add("d-none");

            btn.disabled = true;
        });
    </script>
}
